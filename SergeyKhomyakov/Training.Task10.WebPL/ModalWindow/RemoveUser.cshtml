@using Training.Task6.Common;
@{
    var userLogic = DependencyResolver.UserLogic;
    var awarduserLogic = DependencyResolver.UserAwardLogic;
    var user_id = Request["RemoveUser"];
    if (!string.IsNullOrWhiteSpace(user_id))
    {
        awarduserLogic.DeleteUser(int.Parse(user_id));
        userLogic.DeleteById(int.Parse(user_id));
        
        Response.Redirect("~");
    }
    else 
    {
        Response.Redirect("~");
    }
}