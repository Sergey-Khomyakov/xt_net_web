@using Training.Task10.WebPL.Models;
@{
    Layout = "~/Layout/_Layout.cshtml";
    Page.Title = "Login";

    string Login = null;
    string Password = null;
    Login = Request["Login"];
    Password = Request["Password"];

    if (IsPost)
    {
        FormsAuthentication.SetAuthCookie(Login, createPersistentCookie: true);

        Response.Redirect("~");
    }
}
<body>
    <form action="~/Home/Login" method="post">
        <div class="container">
            <div class="nav justify-content-center">
                <div class="col-5">
                    <div class="form-group row m-3">
                        <label class="col-2 col-form-label">Login</label>
                        <div class="col-12">
                            <input type="text" class="form-control" name="Login" id="Login" value=@Login>
                        </div>
                    </div>
                    <div class="form-group row m-3">
                        <label class="col-2 col-form-label">Password</label>
                        <div class="col-12">
                            <input type="password" class="form-control" name="Password" id="Password" value=@Password>
                        </div>
                    </div>
                    <div class="form-group row m-3">
                        <div class="col-12">
                            <button class="form-control">Войти</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
